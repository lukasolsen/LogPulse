{
  "display": "Node 18",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/"],
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["**/*", "package", "README", "LICENSE", "package-lock"],
  "exclude": [
    "node_modules",
    "dist",
    "templates",
    ".gitignore",
    ".vscode",
    "*.js",
    ".prettierrc",
    "tsconfig.json"
  ],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
