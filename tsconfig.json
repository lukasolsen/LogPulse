{
  "display": "Node 18",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES2022",
    "allowJs": true,
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/"],
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["./src/*", "src/manager/Logger.ts"]
}
