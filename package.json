{
  "name": "Logify",
  "version": "1.0.0",
  "description": "A simple logging library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build-npm": "tsc",
    "build-website": "webpack --mode production",
    "dev-website": "webpack serve --mode development",
    "dev": "nodemon --watch src/**/*.ts --exec ts-node ./src/index.ts",
    "start": "ts-node ./src/index.ts"
  },
  "author": "Lukas Olsen",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "auto-changelog": "^2.4.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "remote": "Logify",
    "handlebarsSetup": "templates/setup.js",
    "issueUrl": "https://www.github.com/lukasolsen/logify/issues/{id}",
    "issuePattern": "[A-Z]+-\\d+",
    "unreleased": true
  }
}
